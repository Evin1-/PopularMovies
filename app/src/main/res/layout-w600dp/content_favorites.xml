<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".FavoritesActivity">

    <fragment
        android:id="@+id/favoritesFragment"
        class="com.loopcupcakes.udacity.popularmovies.fragments.FavoritesFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/placeholderFragment"
        class="com.loopcupcakes.udacity.popularmovies.fragments.PlaceholderFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_placeholder" />

</LinearLayout>