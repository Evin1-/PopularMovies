<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.evin.udacity.popularmovies.fragments.PlaceholderFragment">

    <ImageView
        android:id="@+id/detailsBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/detailsBackgroundDescription"
        android:scaleType="centerCrop" />

    <fragment
        android:id="@+id/detailsFragment"
        class="mx.evin.udacity.popularmovies.fragments.DetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_details" />

</RelativeLayout>
