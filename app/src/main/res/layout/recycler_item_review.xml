<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/recyclerCardPadding">

    <TextView
        android:id="@+id/rvReviewAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/colorLightGray"
        android:textSize="@dimen/rvReviewAuthorTextSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rvReviewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLightGray"
        android:textSize="@dimen/rvReviewContentTextSize" />

    <TextView
        android:id="@+id/rvReviewURL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/rvReviewURLTextSize" />

</LinearLayout>
